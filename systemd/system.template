[Unit]
Description=Bartender System Server
After=central

[Service]
Type=simple
Environment=VIRTUAL_ENV=<BARTENDER_DIR>/venv
Environment=PATH=<BARTENDER_DIR>/venv/bin:$PATH
ExecStart=/usr/bin/python3 <BARTENDER_DIR>/backend/system_server/system_server.py
User=pi

[Install]
WantedBy=multi-user.target
